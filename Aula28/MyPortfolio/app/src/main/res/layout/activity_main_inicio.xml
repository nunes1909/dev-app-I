<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    tools:context=".MainInicio">

    <ImageView
        android:id="@+id/ivFormacao"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/estudo" />

    <ImageView
        android:id="@+id/ivProfissional"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFormacao"
        app:srcCompat="@drawable/work" />

    <ImageView
        android:id="@+id/ivCursos"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfissional"
        app:srcCompat="@drawable/cursos" />

    <ImageView
        android:id="@+id/ivDados"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCursos"
        app:srcCompat="@drawable/dados" />

    <ImageView
        android:id="@+id/ivSensores"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivDados"
        app:srcCompat="@drawable/sensor" />

    <Button
        android:id="@+id/btnVoltarHome"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/benchnine_light"
        android:text="Voltar"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#C6FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnFormacao"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/benchnine_light"
        android:text="Formação Acadêmica"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#C83567"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/ivFormacao"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnXp"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/benchnine_light"
        android:text="Experiência Profissional"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#385898"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/ivProfissional"
        app:layout_constraintTop_toBottomOf="@+id/btnFormacao" />

    <Button
        android:id="@+id/btnDados"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/benchnine_light"
        android:text="Dados Pessoais"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#CD2B1F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/ivDados"
        app:layout_constraintTop_toBottomOf="@+id/btnCursos" />

    <Button
        android:id="@+id/btnSensores"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:fontFamily="@font/benchnine_light"
        android:text="Sensores"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#2CA831"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ivSensores"
        app:layout_constraintTop_toBottomOf="@+id/btnDados" />

    <Button
        android:id="@+id/btnCursos"
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/benchnine_light"
        android:text="Cursos Extracurriculares"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#636e7b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toEndOf="@+id/ivCursos"
        app:layout_constraintTop_toBottomOf="@+id/btnXp" />

</androidx.constraintlayout.widget.ConstraintLayout>