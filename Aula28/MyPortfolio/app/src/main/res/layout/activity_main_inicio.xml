<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF5722"
    tools:context=".MainInicio">

    <ImageView
        android:id="@+id/ivFormacao"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/estudo" />

    <ImageView
        android:id="@+id/ivProfissional"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFormacao"
        app:srcCompat="@drawable/work" />

    <ImageView
        android:id="@+id/ivCursos"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivProfissional"
        app:srcCompat="@drawable/cursos" />

    <ImageView
        android:id="@+id/ivDados"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCursos"
        app:srcCompat="@drawable/dados" />

    <TextView
        android:id="@+id/tvFormacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/cagliostro"
        android:text="Formação Acadêmica"
        android:onClick="onClick"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivFormacao"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="88dp"
        android:fontFamily="@font/cagliostro"
        android:text="Dados Pessoais"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivDados"
        app:layout_constraintTop_toBottomOf="@+id/tvAtv" />

    <TextView
        android:id="@+id/tvAtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/cagliostro"
        android:text="Atividades Extracurriculares"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivCursos"
        app:layout_constraintTop_toBottomOf="@+id/tvXp" />

    <TextView
        android:id="@+id/tvXp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="96dp"
        android:fontFamily="@font/cagliostro"
        android:text="Experiência Profissional"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/ivProfissional"
        app:layout_constraintTop_toBottomOf="@+id/tvFormacao" />

</androidx.constraintlayout.widget.ConstraintLayout>